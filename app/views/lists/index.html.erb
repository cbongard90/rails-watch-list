<div class="banner" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url("https://images.unsplash.com/photo-1524985069026-dd778a71c7b4?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1171&q=80")'>
  <div class='text-center'>
    <h1>Save your movie lists</h1>
    <span id="banner-typed-text"></span>
  </div>
</div>

<div class="container position-relative mt-4">
  <%= link_to 'Create a movie list',new_list_path, class:'btn btn-success',id:'add-list' %>
  <h2>My Lists</h2>
  <div class="cards">
    <% @lists.each do |list| %>
      <%= link_to list.name, list_path(list),
      class:'card-category',
      style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#{list.picture_url})" %>
    <% end %>
  </div>

</div>
