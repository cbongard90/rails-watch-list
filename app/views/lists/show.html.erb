<div class="banner" style='background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(<%= @list.picture_url%>)'>
  <div class='text-center'>
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container mt-4">
  <%# <%= link_to 'Add a movie',new_list_bookmark_path(@list), class:'btn btn-success' %>
  <h2>
    <% if @movies.count > 1 %>
      <%= @movies.count %> Movies
    <% elsif @movies.count == 1 %>
      1 Movie
    <% else %>
      No Movies yet added in the list
    <% end %>
  </h2>
  <div class="cards">
    <% @movies.each do |movie| %>
      <div class="card-trip">
        <%= image_tag movie.poster_url %>
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
          </div>
        <h2 class="card-trip-pricing"><%= movie.rating %></h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <%= simple_form_for([@list, @bookmark]) do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit "Add a movie" %>
    <% end %>
  </div>
</div>
